#links { position: fixed; width: 100%; bottom: -20%; z-index: 1;  }
#links > a { text-decoration: none; color: orangered; border: thin solid orangered; padding: 2%; border-radius: 5%; background-color: black; opacity: 0.8; }
</style>
<title>silverwood works</title>
</head>
<body>
  <img id="bg" src="/bg.jpg">
  <img id="icon" src="/logo.png">
  <div id="title">
    <h1>silverwood</h1>
    <h1>works</h1>
  </div>
  <h1 id="links">
    <a href='https://discord.gg/Vg67KgH'>come</a>
    <a href='https://github.com/silverwood-works/townhall/issues/new?labels=question'>share</a>
    <a href='https://github.com/orgs/silverwood-works/teams/city-council'>give</a>
  </h1>
  <script>
    $("#icon").animate({ top: "0%" }, 2000);
    $("#links").animate({ bottom: "35%" }, 2500);
  </script>
</body>
</html>

